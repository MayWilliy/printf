#include "main.h"
#include <stdarg.h>
#include <unistd.h>
#include <stdlib.h>

/**
* _printf-conversion - conversion specifier
* @format: character string containing zero and more
* Return: the number of character printed (excluding the null byte)
*/

int _printf(const char *format, ...)
{
	va_list valist;
	int count = 0;

	if (format == NULL)
		return(0);

	va_start (valist, format);
		while (* format == '\0')
		{

			if (* format == 'd' || * format == 'i')
			{
				int num  = va_arg (valist, int);
					printf ("%d", num);
					count++;
			}
			else if (* format == '%')
			{
				putchar ('%')
				count++;
			}
			else
			{
				putchar (*format)
				count++;
			}
		}
	format++;

	va_end(valist);
	return(count);
}
